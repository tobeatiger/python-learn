doctype html
html
  head
    title Login
    meta(charset="utf-8")
    meta(http-equiv="x-ua-compatible" content="IE=Edge, chrome=1")
    meta(name="viewport" content="width=device-width, minimum-scale=1.0, initial-scale=1, user-scalable=no")
    style.
      body {
        text-align: center;
      }
      form {
        margin-top: 200px;
      }
      form .form {
        display: inline-block;
        position: relative;
        background-color: #222222;
        border-radius: 5px;
        padding: 30px 30px 20px;
        text-align: right;
      }
      form h1 {
        margin-bottom: 25px;
        margin-top: 0;
      }
      form button {
        padding: 5px 20px;
      }
      .formFields {
        margin-bottom: 16px;
        text-align: left;
      }
      .formFields span {
        color: #bbbbbb;
        display: inline-block;
        font-size: 13pt;
        height: 25px;
        line-height:25px;
        width: 92px;
      }
      .formFields input {
        border: 1px solid #CCCCCC;
        -webkit-border-radius: 4px;
        -moz-border-radius: 4px;
        border-radius: 4px;
        height: 25px;
        line-height: 25px;
        padding-left: 5px;
        width: 195px;
      }
      .message {
        color: #8B0000;
        font-size: 12pt;
        padding: 10px 0 0;
        text-align: left;
      }
body
  form(action="./progs",method="POST")
    h1 Login
    div.form
      div.formFields
        span User
        input(name="user",value="")
      div.formFields
        span Password
        input(type="password" name="password",value="")
      button(type="submit") Log in
      - if (message)
        div.message #{message}